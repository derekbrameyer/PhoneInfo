<resources>
    <style name="Fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FillWidth" parent="Wrap">
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="FillHeight" parent="Wrap">
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="PhoneInfoTheme" parent="Theme.Sherlock.Light.ForceOverflow">

    </style>

    <style name="TextView" parent="Wrap">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextViewVertical" parent="TextView">
        <item name="android:textColor">@color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/text_size_vertical</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="TextViewHuge" parent="Wrap">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>
    <style name="TextViewLarge" parent="Wrap">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="TextViewH1" parent="Wrap">
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>
    <style name="TextViewH2" parent="Wrap">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>
    <style name="HorizontalScrollView" parent="FillWidth">
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0px</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:overScrollHeader">@null</item>
        <item name="android:overScrollFooter">@null</item>
    </style>
    <style name="OnePxDarkBlueDivider" parent="FillWidth">
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/holo_blue_dark</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
</resources>